<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">

    <!-- ================= INPUT WITH BORDER ================= -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputCityLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="Input Location"

        app:boxBackgroundMode="outline"
        app:boxStrokeColor="#137ED3"
        app:boxStrokeWidth="2dp"
        app:boxStrokeWidthFocused="3dp"

        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btSearch">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etCity"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:padding="15dp" />

    </com.google.android.material.textfield.TextInputLayout>


    <!-- ================= SEARCH BUTTON ================= -->
    <Button
        android:id="@+id/btSearch"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:text="Search"
        android:backgroundTint="#E9175F"
        android:textColor="#FFFFFF"
        android:layout_marginEnd="20dp"

        app:layout_constraintTop_toTopOf="@id/inputCityLayout"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- ================= DIVIDER LINE ================= -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#40C147"
        android:layout_marginTop="10dp"

        app:layout_constraintTop_toBottomOf="@id/inputCityLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/resultCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/card_blue"
        android:padding="20dp"
        android:layout_margin="20dp"

        android:visibility="gone"

        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <!-- Name -->
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <!-- Country -->
        <TextView
            android:id="@+id/tvCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            app:layout_constraintStart_toStartOf="parent" />


        <!-- Latitude -->
        <TextView
            android:id="@+id/tvLat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/tvCountry"
            app:layout_constraintStart_toStartOf="parent" />


        <!-- Longitude -->
        <TextView
            android:id="@+id/tvLon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/tvLat"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>