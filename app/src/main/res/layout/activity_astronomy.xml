<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AstronomyActivity">

    <!-- City Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilCity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="8dp"
        app:boxBackgroundMode="filled"
        app:boxCornerRadiusTopStart="30dp"
        app:boxCornerRadiusTopEnd="30dp"
        app:boxCornerRadiusBottomStart="30dp"
        app:boxCornerRadiusBottomEnd="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tilDate"
        app:layout_constraintWidth_percent="0.48">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etCity"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="City"
            android:paddingStart="20dp"
            android:textStyle="bold"
            android:background="@null"/>
    </com.google.android.material.textfield.TextInputLayout>


    <!-- Date Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toEndOf="@id/tilCity"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:boxBackgroundMode="filled"
        app:boxCornerRadiusTopStart="30dp"
        app:boxCornerRadiusTopEnd="30dp"
        app:boxCornerRadiusBottomStart="30dp"
        app:boxCornerRadiusBottomEnd="30dp"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/baseline_calendar_month_24"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDate"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingStart="20dp"
            android:focusable="false"
            android:clickable="true"
            android:inputType="none"
            android:background="@null"/>
    </com.google.android.material.textfield.TextInputLayout>


    <!-- Search Button -->
    <Button
        android:id="@+id/btnSearch"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="Search"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#2F8FD7"
        app:cornerRadius="35dp"
        app:layout_constraintTop_toBottomOf="@id/tilCity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_marginTop="25dp"
        android:background="#2F8FD7"
        app:layout_constraintTop_toBottomOf="@id/btnSearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- Result Card -->
    <ScrollView
        android:id="@+id/resultCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:visibility="gone"
        android:fillViewport="true"
        android:background="@drawable/card_blue"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="25dp">

            <TextView
                android:id="@+id/tvRegionValue"
                android:text="Region : ---"
                style="@style/ResultValueStyle"/>

            <TextView
                android:id="@+id/tvCountryValue"
                android:text="Country : ---"
                style="@style/ResultValueStyle"
                android:layout_marginTop="20dp"/>

            <!-- ✅ Local Time -->
            <TextView
                android:id="@+id/tvLocalTimeValue"
                android:text="Local Time : ---"
                style="@style/ResultValueStyle"
                android:layout_marginTop="20dp"/>

            <!-- ✅ Distance -->
            <TextView
                android:id="@+id/tvDistanceValue"
                android:text="Distance : ---"
                style="@style/ResultValueStyle"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/tvSunriseValue"
                android:text="Sunrise : ---"
                style="@style/ResultValueStyle"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/tvSunsetValue"
                android:text="Sunset : ---"
                style="@style/ResultValueStyle"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/tvMoonriseValue"
                android:text="Moonrise : ---"
                style="@style/ResultValueStyle"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/tvMoonsetValue"
                android:text="Moonset : ---"
                style="@style/ResultValueStyle"
                android:layout_marginTop="20dp"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
